{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "order_id": {
      "type": "uid",
      "required": true
    },
    "statuses": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "shipped",
        "processing",
        "pending",
        "cancelled",
        "delivered"
      ]
    },
    "items": {
      "type": "json",
      "required": true
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "order_address": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address",
      "inversedBy": "orders"
    },
    "payment_details": {
      "type": "json",
      "required": false
    },
    "shipping_cost": {
      "type": "decimal",
      "required": true
    },
    "shipping_method_name": {
      "type": "string",
      "required": true
    },
    "payment_method": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "card_to_card",
        "online_gateway"
      ]
    }
  }
}
